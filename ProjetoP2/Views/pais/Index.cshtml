@model IEnumerable<ProjetoP2.pais>

@{
    ViewBag.Title = "Países";
}

<h2>Países</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Nome</p>
        </th>
        <th>
            <p>População</p>
        </th>
        <th>
            <p>Regime</p>
        </th>
        <th>
           <p>Área</p>
        </th>
        <th>
            <p>Presidente</p>
        </th>
        <th>
            <p>Moeda</p>
        </th>
        <th>
            <p>Idioma</p>
        </th>
        <th>
            <p>Capital</p>
        </th>
        <th>
            <p>Data marcante</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.populacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.regine)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.area)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.presidente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.moeda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idioma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.capital)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dt_marcante)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
